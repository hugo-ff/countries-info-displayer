{
	"presets": [
		[
			"@babel/preset-env",
			{
				"corejs": 3.16,
				"useBuiltIns": "usage"
			}
		],
		[
			"@babel/preset-react",
			{
				"runtime": "automatic"
			}
		]
	],
	"plugins": [
		[
			"module-resolver",
			{
				"root": ["."],
				"alias": {
					"src": "./src",
					"js": "./src/js",
					"assets": "./src/assets",
					"components": "./src/js/components",
					"layouts": "./src/js/layouts",
					"theme": "./src/js/theme",
					"utils": "./src/js/utils",
					"hooks": "./src/js/hooks",
					"pages": "./src/js/pages"
				}
			}
		],
		[
			"babel-plugin-styled-components",
			{
				"transpileTemplateLiterals": true
			}
		]
	]
}
